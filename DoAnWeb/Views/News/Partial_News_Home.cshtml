@model IEnumerable<DoAnCoSo.Models.EF.News>
@if (Model != null && Model.Any())
{

    <div class="blogs">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title">
                        <h2>Blogs</h2>
                    </div>
                </div>
            </div>

            <div class="row blogs_container">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 blog_item_col">
                        <div class="blog_item">
                            <div class="blog_background" style="background-image:url(@item.image)"></div>
                            <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                                <h4 class="blog_title">@item.title</h4>
                                <span class="blog_meta">by @item.createdby | @item.createddate.ToString("MMM dd,yyyy")</span>
                                <a class="blog_more" href="/tin-tuc">Read more</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

}

